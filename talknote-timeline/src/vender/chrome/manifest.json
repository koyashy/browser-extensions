{
    "manifest_version": 2,

    "name": "Talknote timeline extension",
    "description": "This extension shows timeline in news page.",
    "version": "${ version }",
    "update_url": "https://s3-ap-northeast-1.amazonaws.com/mediba-browser-extensions/talknote-timeline/updates.xml",

    "permissions": [
        "webNavigation"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "lib/jquery-2.2.1.min.js",
            "js/ttex.js",
            "js/ttex-beta.js",
            "js/background-chrome.js"
        ]
    },

    "content_scripts": [{
        "matches": ["https://company.talknote.com/*"],
        "css": ["css/style.css"],
        "js": [
            "lib/jquery-2.2.1.min.js",
            "js/ttex.js",
            "js/ttex-beta.js",
            "js/content-chrome.js"
        ],
        "run_at": "document_end"
    }],

    "icons": {
        "16": "images/talknote_logo_16.png",
        "48": "images/talknote_logo_48.png",
        "128": "images/talknote_logo_128.png"
    }
}
